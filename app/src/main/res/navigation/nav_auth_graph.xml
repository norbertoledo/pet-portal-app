<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_auth_graph"
    app:startDestination="@id/fragment_auth">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_auth"
        android:name="com.norbertoledo.petportal.ui.auth.AuthFragment"
        android:label="Auth"
        tools:layout="@layout/fragment_auth"
        >
        <action
            android:id="@+id/action_fragment_auth_to_fragment_signin"
            app:destination="@id/fragment_signin"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_signin"
        android:name="com.norbertoledo.petportal.ui.auth.SignInFragment"
        android:label="SignIn"
        tools:layout="@layout/fragment_signin"
        >
        <action
            android:id="@+id/action_fragment_signin_to_fragment_signup"
            app:destination="@id/fragment_signup"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_signup"
        android:name="com.norbertoledo.petportal.ui.auth.SignUpFragment"
        android:label="SignUp"
        tools:layout="@layout/fragment_signup"
        >
        <action
            android:id="@+id/action_fragment_signup_to_fragment_signin"
            app:destination="@id/fragment_signin"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>

</navigation>