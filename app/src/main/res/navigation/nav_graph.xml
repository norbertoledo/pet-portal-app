<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home">
    <fragment
        android:id="@+id/nav_home"
        android:name="com.norbertoledo.petportal.ui.home.HomeFragment"
        android:label="Pet Portal"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_nav_services"
            app:destination="@id/nav_services"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_nav_home_to_nav_places"
            app:destination="@id/nav_places"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_nav_home_to_nav_links"
            app:destination="@id/nav_links" />
        <action
            android:id="@+id/action_nav_home_to_nav_tips"
            app:destination="@id/nav_tips" />
    </fragment>
    <fragment
        android:id="@+id/nav_services"
        android:name="com.norbertoledo.petportal.ui.services.ServicesFragment"
        android:label="Servicios"
        tools:layout="@layout/fragment_services" >
        <action
            android:id="@+id/action_nav_services_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_places"
        android:name="com.norbertoledo.petportal.ui.places.PlacesFragment"
        android:label="Lugares"
        tools:layout="@layout/fragment_places" >
        <action
            android:id="@+id/action_nav_places_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_tips"
        android:name="com.norbertoledo.petportal.ui.tips.TipsFragment"
        android:label="Tips"
        tools:layout="@layout/fragment_tips" >
        <action
            android:id="@+id/action_nav_tips_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/nav_links"
        android:name="com.norbertoledo.petportal.ui.links.LinksFragment"
        android:label="Links"
        tools:layout="@layout/fragment_links" >
        <action
            android:id="@+id/action_nav_links_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
</navigation>